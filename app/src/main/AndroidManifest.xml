<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.instadoggo.app">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        android:minSdkVersion="30" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InstaDoggo"
        tools:targetApi="31">
        <activity
            android:name=".controller.add_post_activity"
            android:exported="false" />
        <activity
            android:name=".controller.splash_screen_activity"
            android:exported="true">
        </activity>
        <activity
            android:name=".controller.post_sucess_activity"
            android:exported="false" />
        <activity
            android:name=".controller.profile_activity"
            android:exported="false" />
        <activity
            android:name=".controller.other_profile_search_activity"
            android:exported="false" />
        <activity
            android:name=".controller.search_activity"
            android:exported="false" />
        <activity
            android:name=".controller.add_profile_picture_activity"
            android:exported="true">
        </activity>
        <activity
            android:name=".controller.add_account_information_activity"
            android:exported="false" />
        <activity
            android:name=".controller.signup_activity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.login_activity"
            android:exported="false" />
        <activity
            android:name=".controller.home_activity"
            android:exported="false" />
    </application>

</manifest>